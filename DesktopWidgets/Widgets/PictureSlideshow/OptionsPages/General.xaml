<Page x:Class="DesktopWidgets.Widgets.PictureSlideshow.OptionsPages.General"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DesktopWidgets.OptionsPages"
      xmlns:p="clr-namespace:DesktopWidgets.Properties"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" Title="General">
    <StackPanel>
        <TextBlock Text="Shuffle:" />
        <CheckBox IsChecked="{Binding Settings.Shuffle, UpdateSourceTrigger=Explicit}" />

        <TextBlock Text="Recursive:" />
        <CheckBox IsChecked="{Binding Settings.Recursive, UpdateSourceTrigger=Explicit}" />

        <TextBlock Text="Root Folder Path:" />
        <TextBox Text="{Binding Settings.RootPath, UpdateSourceTrigger=Explicit}" />

        <TextBlock Text="Next Picture Delay:" />
        <TextBox Text="{Binding Settings.ChangeInterval, UpdateSourceTrigger=Explicit}" />

        <TextBlock Text="Max File Size:" />
        <TextBox Text="{Binding Settings.FileFilterSize, UpdateSourceTrigger=Explicit}" />
    </StackPanel>
</Page>