<Page x:Class="DesktopWidgets.Widgets.Sidebar.OptionsPages.General"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DesktopWidgets.OptionsPages"
      xmlns:p="clr-namespace:DesktopWidgets.Properties"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" Title="General">
    <StackPanel>
        <TextBlock Text="Hide on shortcut launch:" />
        <CheckBox IsChecked="{Binding Settings.HideOnExecute, UpdateSourceTrigger=Explicit}" />

        <TextBlock Text="Allow drag and drop files:" />
        <CheckBox IsChecked="{Binding Settings.AllowDropFiles, UpdateSourceTrigger=Explicit}" />

        <TextBlock Text="Parse Shortcut Files:" />
        <CheckBox IsChecked="{Binding Settings.ParseShortcutFiles, UpdateSourceTrigger=Explicit}" />

        <TextBlock Text="Enable Icon Cache:" />
        <CheckBox IsChecked="{Binding Settings.UseIconCache, UpdateSourceTrigger=Explicit}" />
    </StackPanel>
</Page>