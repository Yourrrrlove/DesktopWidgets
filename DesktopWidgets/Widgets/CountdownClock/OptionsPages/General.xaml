<Page x:Class="DesktopWidgets.Widgets.CountdownClock.OptionsPages.General"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DesktopWidgets.OptionsPages"
      xmlns:p="clr-namespace:DesktopWidgets.Properties"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:classes="clr-namespace:DesktopWidgets.Classes"
      mc:Ignorable="d" Title="General">
    <Page.Resources>
        <classes:OneHundredConverter x:Key="OneHundredConverter" />
    </Page.Resources>
    <StackPanel>
        <TextBlock Text="Update Interval (ms):" />
        <TextBox Text="{Binding Settings.UpdateInterval, UpdateSourceTrigger=Explicit}" />

        <TextBlock Text="End Date and Time:" />
        <TextBox Text="{Binding Settings.EndDateTime, UpdateSourceTrigger=Explicit}" />

        <TextBlock Text="End Sound Path:" />
        <TextBox Text="{Binding Settings.EndSoundPath, UpdateSourceTrigger=Explicit}" />

        <TextBlock Text="End Sound Volume:" />
        <Slider
            Value="{Binding Settings.EndSoundVolume, Converter={StaticResource OneHundredConverter}, UpdateSourceTrigger=Explicit}" />
    </StackPanel>
</Page>