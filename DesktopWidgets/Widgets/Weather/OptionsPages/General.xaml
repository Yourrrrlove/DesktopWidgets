<Page x:Class="DesktopWidgets.Widgets.Weather.OptionsPages.General"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DesktopWidgets.OptionsPages"
      xmlns:p="clr-namespace:DesktopWidgets.Properties"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" Title="General">
    <StackPanel>
        <TextBlock Text="Zip Code:" />
        <TextBox Text="{Binding Settings.ZipCode, UpdateSourceTrigger=Explicit}" />

        <TextBlock Text="Unit Type:" />
        <TextBox Text="{Binding Settings.UnitType, UpdateSourceTrigger=Explicit}" />

        <TextBlock Text="Refresh Interval:" />
        <TextBox Text="{Binding Settings.RefreshInterval, UpdateSourceTrigger=Explicit}" />
    </StackPanel>
</Page>