<UserControl x:Class="DesktopWidgets.UserControls.CountdownClock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DesktopWidgets.UserControls"
             xmlns:desktopWidgets="clr-namespace:DesktopWidgets"
             mc:Ignorable="d">
    <UserControl.Resources>
        <desktopWidgets:DateTimeToCountdownText x:Key="DateTimeToCountdownText" />
    </UserControl.Resources>
    <Grid>
        <TextBlock>
            <TextBlock.Text>
                <MultiBinding Converter="{StaticResource DateTimeToCountdownText}">
                    <Binding Path="CurrentTime" />
                    <Binding Path="Settings" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
    </Grid>
</UserControl>