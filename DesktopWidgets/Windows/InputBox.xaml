<Window x:Class="DesktopWidgets.Windows.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:classes="clr-namespace:DesktopWidgets.Classes"
        mc:Ignorable="d"
        Height="400" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Title="{Binding Title}"
        FocusManager.FocusedElement="{Binding ElementName=txtData}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <classes:BoolToCollapsedVisibilityConverter x:Key="BoolToCollapsedVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" x:Name="txtData" Text="{Binding InputData}"
                 Margin="15" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="{Binding IsDisplayData}" />

        <Grid Row="1" Column="0" ColumnSpan="2" Margin="15,0,15,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="23" />
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Width" Value="75" />
                    <Setter Property="Visibility"
                            Value="{Binding IsDisplayData, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </Style>
            </Grid.Resources>
            <Button Grid.Column="0" Content="Copy" Click="btnCopy_OnClick" />
            <Button Grid.Column="1" Content="Save..." Click="btnSave_OnClick"
                    Margin="5,0,0,0" />
            <Button Grid.Column="3" Content="_OK" Click="btnOK_Click" IsDefault="True" Visibility="Visible"
                    IsCancel="{Binding IsDisplayData}" />
            <Button Grid.Column="4" Content="_Cancel" Click="btnCancel_Click" IsCancel="True"
                    Visibility="{Binding IsDisplayData, Converter={StaticResource BoolToCollapsedVisibilityConverter}}"
                    Margin="5,0,0,0" />
        </Grid>
    </Grid>
</Window>