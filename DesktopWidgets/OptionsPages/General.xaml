<Page x:Class="DesktopWidgets.OptionsPages.General"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DesktopWidgets.OptionsPages"
      xmlns:p="clr-namespace:DesktopWidgets.Properties"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" Title="General">
    <xctk:PropertyGrid
        SelectedObject="{Binding Source={x:Static p:Settings.Default}}"
        AutoGenerateProperties="False"
        IsCategorized="False"
        ShowSortOptions="False">
        <xctk:PropertyGrid.PropertyDefinitions>
            <xctk:PropertyDefinition TargetProperties="RunOnStartup" />
            <xctk:PropertyDefinition TargetProperties="CheckForUpdates" />
            <xctk:PropertyDefinition TargetProperties="AutoUpdate" />
            <xctk:PropertyDefinition TargetProperties="EnableAdvancedMode" />
        </xctk:PropertyGrid.PropertyDefinitions>
    </xctk:PropertyGrid>
</Page>