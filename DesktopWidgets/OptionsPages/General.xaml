<Page x:Class="DesktopWidgets.OptionsPages.General"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DesktopWidgets.OptionsPages"
      xmlns:p="clr-namespace:DesktopWidgets.Properties"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" Title="General">
    <StackPanel>
        <TextBlock Text="Run on Startup:" />
        <CheckBox
            IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=RunOnStartup, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
            ToolTip="Run at Windows Startup" />
        
        <TextBlock Text="Check For Updates:" />
        <CheckBox IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=CheckForUpdates, Mode=TwoWay}"
                  ToolTip="Check for Updates automatically" />
        
        <TextBlock Text="Silent Auto-Update:" />
        <CheckBox IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=AutoUpdate, Mode=TwoWay}"
                  ToolTip="Automatically update application without confirmation dialogs" />

        <TextBlock Text="Enable Advanced Mode:" />
        <CheckBox
            IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=EnableAdvancedMode, Mode=TwoWay, UpdateSourceTrigger=Explicit}" />
    </StackPanel>
</Page>