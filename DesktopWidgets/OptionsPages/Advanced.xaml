<Page x:Class="DesktopWidgets.OptionsPages.Advanced"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DesktopWidgets.OptionsPages"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:properties="clr-namespace:DesktopWidgets.Properties"
      mc:Ignorable="d"
      Title="Advanced">

    <xctk:PropertyGrid Margin="0,10,0,0" AutoGenerateProperties="true"
                       SelectedObject="{Binding Source={x:Static properties:Settings.Default}}"
                       IsCategorized="False"
                       ShowSortOptions="False" ShowSummary="False" ShowTitle="False" ShowSearchBox="True"
                       Background="{x:Static SystemColors.WindowBrush}" />
</Page>